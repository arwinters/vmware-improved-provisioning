{
  "instance-id": "{{ vm_name }}",
  "local-hostname": "{{ vm_name }}",
  "network": {
    "version": 2,
    "ethernets": {
      "ens192": {
        "match": {
          "macaddress": "{{ vm_deploy_result.instance.hw_eth0.macaddress }}"
        },
        {% if vm_dhcp is defined %}
        "dhcp4": true,
        {% else %}
        "addresses": [
          "{{ vm_ip_address }}"
        ],
        "gateway4": "{{ vm_gateway }}",
        "nameservers": {
          "search": [
            "nforce-it.nl",
            "nforce-it.local"
          ],
          "addresses": [
            "8.8.8.8"
          ]
        }
        {% endif %}
      }
    }
  }
}
